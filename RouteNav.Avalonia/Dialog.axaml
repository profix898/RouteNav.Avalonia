<platform:Page xmlns="https://github.com/avaloniaui"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:platform="clr-namespace:NSE.RouteNav"
               x:Class="NSE.RouteNav.Dialog"
               Title="Dialog">
    <platform:Page.ContentTemplate>
        <DataTemplate DataType="{x:Type platform:Dialog}">
            <Grid RowDefinitions="35, Auto" Margin="0">
                <Border Grid.Row="0" Background="{Binding TitleBarBrush}" />
                <TextBlock Grid.Row="0" Margin="15, 0, 0, 0" Text="{Binding Title}" Foreground="{Binding TitleTextBrush}" FontSize="20" VerticalAlignment="Center" />
                <ContentPresenter Grid.Row="1" Padding="15, 10, 10, 15" />
            </Grid>
        </DataTemplate>
    </platform:Page.ContentTemplate>
</platform:Page>
