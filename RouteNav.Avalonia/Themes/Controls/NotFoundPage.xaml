<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pages="clr-namespace:RouteNav.Avalonia.Pages">
    <Design.PreviewWith>
        <Border Padding="50">
            <pages:NotFoundPage Title="Not Found" Content="Content goes here" />
        </Border>
    </Design.PreviewWith>
    <ControlTheme x:Key="{x:Type pages:NotFoundPage}" TargetType="pages:NotFoundPage">
        <Setter Property="Template">
            <ControlTemplate>
                <TextBlock Text="404 - Page Not Found!" Foreground="Red" FontSize="24" FontWeight="Bold"
                           VerticalAlignment="Center" HorizontalAlignment="Center" />
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>