<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pages="clr-namespace:RouteNav.Avalonia.Pages">
    <Design.PreviewWith>
        <Border Padding="50">
            <pages:NotFoundPage />
        </Border>
    </Design.PreviewWith>
    <ControlTheme x:Key="{x:Type pages:NotFoundPage}" TargetType="pages:NotFoundPage">
        <Setter Property="Title" Value="Not Found" />
        <Setter Property="Template">
            <ControlTemplate>
                <Panel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="White">
                    <TextBlock Text="404 - Page Not Found!" Foreground="Red" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Panel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>